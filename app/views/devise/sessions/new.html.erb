<section class="devise">
  <div class="devise-page">
    로 그 인
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: "이메일", required: false, autofocus: true %>
        <%= f.input :password, label: "비밀번호", required: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "로그인" %>
      </div>
  <% end %>
</section>